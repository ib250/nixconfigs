#
# wm independent hotkeys
#

# lights
{F2,F3}
	xbacklight -{dec,inc} 2

# volume mute/unmute
F6
	amixer set Master toggle

# volume toggles
{F7,F8}
	amixer set Master 1000{-,+} unmute


# kill panel
#super + alt + Escape
	#lemtoggle stop  && bspc quit 2> /dev/null

# terminal emulator with zsh normally
super + Return
	pgrep urxvtd && urxvtc || urxvt

# terminal emulator in bash
super + {shift,alt} + Return
	gurxvt.sh {pullup,center}

# program launcher
super + space
    rofi -terminal urxvtc \
	 -modi "window,run,windowcd" \
	 -show run

super + shift + space
    rofi -terminal urxvtc \
	 -modi "files:rofi-file-browser.sh" \
	 -show files

super + alt + space
	gmrun

#super + shift + bracket{left,right}
	#bspc monitor {-r,-a 1}

#	lemtoggle.sh reload \
#	source $HOME/.bash_aliases \
#	lowerbar

super + {S,I,i}
	{keratin -fn "fixed" -nf $barFG -nb $barBG -sf $barBG -sb $barFG,\
	mpdmenu -l :: -l 10 -fn "fixed" -nb $barBG -nf $barFG -sb $barFG -sf $barBG,\
	mpdmenu -p :: -l 10 -fn "fixed" -nb $barBG -nf $barFG -sb $barFG -sf $barBG}

super + N
  bargaps.sh

super + n
	hwpopit.sh -sys

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	pgrep polybar && pkill polybar; \
	pkill compton; \
	bspc quit; \
	exit;

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + shift + period
    bspc node -s biggest

# change desktop layout to monocle
super + shift + m
    bspc query -N -d | xargs -I id -n 1 bspc node id -t {pseudo_tiled,tiled}

# rotate by 90
super + R
	bspc query -N -d | xargs -I id -n 1 bspc node id -R 90

super + {v,V}
	bspc query -N -d | xargs -I id -n 1 bspc node id -F {vertical,horizontal}

# balance sizes
super + B
	bspc query -N -d | xargs -I id -n 1 bspc node id -B

# float all
super + shift + f
    bspc query -N -d | xargs -I id -n 1 bspc node id -t {floating,tiled}
#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + shift + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
#super + {p,b,comma,period}
#	bspc node -f @{parent,brother,first,second}

# focus the next/previous node
#super + {_,shift + }c
super + {comma,period}
	bspc node -f {next,prev}.local

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next} && \
	hwpopit.sh -ws

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
#super + {o,i}
#	bspc wm -h off; \
#	bspc node {older,newer} -f; \
#	bspc wm -h on

# focus or send to the given desktop
#super + {_,shift + }{1-9,0}
	#bspc {desktop -f,node -d} '^{1-9,10}'
	#

super + {1-9,0}
	bspc desktop -f '^{1-9,10}' && hwpopit.sh -ws

super + shift + {1-9,0}
	bspc node -d '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# receptacles
super + {_,shift} + e
	{bspc node -i,for win in `bspc query -N -n .leaf.!window -d focused`; do bspc node $win -k ; done;}
#
# resize tiled/floating
#

# expand the tiled space in the given direction
super + alt + {h,j,k,l}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
super + alt + shift + {h,j,k,l}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# move a floating window
super + {Left,Down,Up,Right}
	xdo move {-x -20,-y +20,-y -20,-x +20}

# resize with keyboard
super + alt + {Up,Down,Right,Left}
	wrs {0 5,0 -5,5 0,-5 0} $(pfw)

super + {a,d}
	wrs {2 2,-2 -2} $(pfw)

# change gap sizes
super + G
	pgrep polybar && squeezewin.sh +10 +bar || squeezewin.sh +10


super + g
	pgrep polybar && squeezewin.sh -10 +bar || squeezewin.sh -10

#
# pointer focus/move/resize
#

# focus
~button1
	bspc pointer -g focus

# start move/resize
super + button{1-3}
	; bspc pointer -g {move,resize_side,resize_corner}

# end move/resize
super + @button{1-3}
	bspc pointer -u

